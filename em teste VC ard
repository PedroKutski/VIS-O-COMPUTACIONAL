void setup() {
  pinMode(2, OUTPUT);  // Configura o pino 3 como saÃ­da
  Serial.begin(9600);
}

void loop() {
  if (Serial.available() > 0) {
    char command = Serial.read();
    if (command == '1') {
      digitalWrite(2, HIGH);  // Acende o LED no pino 3
    } else if (command == '0') {
      digitalWrite(2, LOW);   // Apaga o LED no pino 3
    }
  }
}
